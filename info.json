{
    "title": "Material Colors",
    "id": "haiMaterialColors",
    "description": "Skin based on the default Material Design skin that allows for multiple color accent and font choices.",
    "version": "1.0.0",
    "type": "skin",
    "author": "Hawke AI",
    "icon": "thumb.png",
    "skin_options": [{
            "type": "radio",
            "default": "dark",
            "title": "Base Theme",
            "options": {
                "dark": {
                    "title": "Dark",
                    "variables": {
                        "darkTheme": "true",
                        "buttonTextColor": "@textColor"
                    }
                },
                "light": {
                    "title": "Light",
                    "variables": {
                        "darkTheme": "false",
                        "baseColor": "#FFFFFF",
                        "windowBorderColor": "#303030",
                        "buttonTextColor": "@baseColor",
                        "tooltipBgColor": "#616161",
                        "secondaryColor": "#fcfcfc",
                        "tertiaryColor": "#e6e6e6",
                        "hoverBgColor": "#f2f2f2",
                        "contrastColor": "#c8c8c8",
                        "selectedColor": "#e0e0e0",
                        "disabledColor": "#989898",
                        "ratingInversion": "@materialDarkColor",
                        "ratingInversionNowPlaying": "@ratingInversion",
                        "accentColor": "@materialDarkColor"
                    }
                }
            }
        },
        {
            "type": "radio",
            "default": "blue",
            "title": "Color Accent",
            "options": {
                "blue": {
                    "title": "Blue",
                    "variables": {
                        "materialColor": "#003399",
                        "materialDarkColor": "#000066",
                        "materialLightColor": "#3265c9",
                        "accentColor": "#3265c9",
                        "hotlinkColor": "@materialLightColor",
                        "highlightBgColor": "@accentColor",
                        "progressBarColor": "@materialLightColor",
                        "ratingInversionNowPlaying": "@accentColor",
                        "ratingStarNowPlaying": "@accentColor"
                    }
                },
                "gray": {
                    "title": "Gray",
                    "variables": {
                        "materialColor": "#555555",
                        "materialDarkColor": "#222222",
                        "materialLightColor": "#cccccc",
                        "accentColor": "#fb8c00",
                        "hotlinkColor": "@materialLightColor",
                        "ratingInversion": "@textColor",
                        "ratingInversionNowPlaying": "@accentColor",
                        "ratingStarNowPlaying": "@accentColor"
                    }
                },
                "green": {
                    "title": "Green",
                    "variables": {
                        "materialColor": "#009933",
                        "materialDarkColor": "#006633",
                        "materialLightColor": "#00C742",
                        "accentColor": "#00C742",
                        "hotlinkColor": "@accentColor",
                        "highlightBgColor": "@accentColor",
                        "progressBarColor": "@materialLightColor",
                        "ratingInversionNowPlaying": "@accentColor",
                        "ratingStarNowPlaying": "@accentColor"
                    }
                },
                "orange": {
                    "title": "Orange",
                    "variables": {}
                },
                "purple": {
                    "title": "Purple",
                    "variables": {
                        "materialColor": "#663399",
                        "materialDarkColor": "#330066",
                        "materialLightColor": "#9966ff",
                        "accentColor": "#9966ff",
                        "hotlinkColor": "@accentColor",
                        "highlightBgColor": "@accentColor",
                        "progressBarColor": "@materialLightColor",
                        "ratingInversionNowPlaying": "@accentColor",
                        "ratingStarNowPlaying": "@accentColor"
                    }
                },
                "red": {
                    "title": "Red",
                    "variables": {
                        "materialColor": "#CC3300",
                        "materialDarkColor": "#990000",
                        "materialLightColor": "#ff0000",
                        "accentColor": "#ff0000",
                        "hotlinkColor": "@accentColor",
                        "highlightBgColor": "@accentColor",
                        "progressBarColor": "@materialDarkColor",
                        "ratingInversionNowPlaying": "@accentColor",
                        "ratingStarNowPlaying": "@accentColor"
                    }
                }
            }
        },
        {
            "type": "dropdown",
            "title": "Font Face",
            "variable": "@selectedFont",
            "default": "Roboto",
            "options": {
                "RobotoSerif": "Serif",
                "Roboto": "Sans-Serif",
                "RobotoMono": "Monospaced"
            }
        },
        {
            "type": "dropdown",
            "title": "Font Size",
            "variable": "@baseFontSize",
            "default": "13",
            "options": {
                "12": "Small",
                "13": "Normal",
                "15": "Large"
            }
        }
    ]
}